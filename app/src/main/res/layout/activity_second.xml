<?xml version="1.0" encoding="ISO-8859-1"?>
<LinearLayout
    tools:context=".SecondActivity"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:background="@color/firstLayout">

        <ImageView
            android:id="@+id/image"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/date"
            android:src="@mipmap/art_clear"/>

        <TextView
            android:id="@+id/date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="Today, August 7"/>

        <TextView
            android:id="@+id/weather"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:textSize="20sp"
            android:text="weather"
            android:gravity="center_horizontal"
            android:layout_alignRight="@+id/image"
            android:layout_alignEnd="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_alignStart="@+id/image"/>

        <TextView
            android:id="@+id/min"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_below="@+id/date"
            android:textSize="60sp"
            android:text="min"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/image"
            android:layout_alignTop="@id/image"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"/>

        <TextView
            android:id="@+id/max"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/min"
            android:textSize="30sp"
            android:text="max"
            android:gravity="center_horizontal"
            android:layout_alignRight="@id/min"
            android:layout_alignEnd="@id/min"
            android:layout_alignLeft="@id/min"
            android:layout_alignStart="@id/min"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:background="@color/secondLayout">

        <TextView
            android:id="@+id/humidity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:text="Humidity"
            android:layout_alignParentTop="true"
            android:textColor="@color/secondText"/>

        <TextView
            android:id="@+id/humidityValue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="25sp"
            android:text="value"
            android:layout_alignBottom="@id/humidity"
            android:layout_alignTop="@id/humidity"
            android:layout_toRightOf="@id/humidity"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="Pressure"
            android:layout_alignRight="@id/humidity"
            android:layout_alignEnd="@id/humidity"
            android:layout_alignLeft="@id/humidity"
            android:layout_alignStart="@id/humidity"
            android:textColor="@color/secondText"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pressureValue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="value"
            android:layout_alignLeft="@id/humidityValue"
            android:layout_alignStart="@id/humidityValue"
            android:layout_alignBottom="@id/pressure"
            android:layout_alignTop="@id/pressure"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/wind"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="Wind"
            android:layout_alignRight="@id/pressure"
            android:layout_alignEnd="@id/pressure"
            android:layout_alignLeft="@id/pressure"
            android:layout_alignStart="@id/pressure"
            android:textColor="@color/secondText"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/windValue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="value"
            android:layout_alignLeft="@id/pressureValue"
            android:layout_alignStart="@id/pressureValue"
            android:layout_alignBottom="@id/wind"
            android:layout_alignTop="@id/wind"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</LinearLayout>